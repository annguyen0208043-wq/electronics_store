@model TechShop.ViewModels.ProductFilterViewModel

<div class="card">
    <div class="card-body">
        <h5 class="card-title mb-3">Bộ lọc sản phẩm</h5>
        
        <!-- Lọc theo danh mục -->
        <div class="mb-4">
            <h6 class="mb-3">Danh mục</h6>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="categories" value="Laptop" id="laptop" 
                    @(Model.SelectedCategories.Contains("Laptop") ? "checked" : "")>
                <label class="form-check-label" for="laptop">Laptop</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="categories" value="Bàn phím" id="keyboard"
                    @(Model.SelectedCategories.Contains("Bàn phím") ? "checked" : "")>
                <label class="form-check-label" for="keyboard">Bàn phím</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="categories" value="Loa" id="speaker"
                    @(Model.SelectedCategories.Contains("Loa") ? "checked" : "")>
                <label class="form-check-label" for="speaker">Loa</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="categories" value="Tai nghe" id="headphone"
                    @(Model.SelectedCategories.Contains("Tai nghe") ? "checked" : "")>
                <label class="form-check-label" for="headphone">Tai nghe</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="categories" value="Màn hình" id="monitor"
                    @(Model.SelectedCategories.Contains("Màn hình") ? "checked" : "")>
                <label class="form-check-label" for="monitor">Màn hình</label>
            </div>
        </div>

        <!-- Lọc theo giá -->
        <div class="mb-4">
            <h6 class="mb-3">Khoảng giá</h6>
            <div class="row mb-2">
                <div class="col">
                    <label class="form-label">Từ</label>
                    <input type="number" class="form-control" id="minPrice" name="minPrice" 
                           value="@Model.MinPrice" min="0" max="50000000" step="100000">
                </div>
                <div class="col">
                    <label class="form-label">Đến</label>
                    <input type="number" class="form-control" id="maxPrice" name="maxPrice" 
                           value="@Model.MaxPrice" min="0" max="50000000" step="100000">
                </div>
            </div>
        </div>

        <!-- Nút lọc và reset -->
        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">Lọc sản phẩm</button>
            <a href="@Url.Action("Index", "Product", new { area = "User" })" class="btn btn-outline-secondary">Đặt lại</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Xử lý sự kiện đặt lại
            $('.reset-btn').click(function(e) {
                e.preventDefault();
                
                // Hủy chọn tất cả các checkbox danh mục
                $('input[name="categories"]').prop('checked', false);
                
                // Submit form để hiển thị tất cả sản phẩm
                $('#filterForm').submit();
            });
        });
    </script>
}

<style>
    .form-check {
        margin-bottom: 8px;
    }
    .form-check-input:checked {
        background-color: #007bff;
        border-color: #007bff;
    }
    .form-label {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 0.3rem;
    }
</style> 