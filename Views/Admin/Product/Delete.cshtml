@model TechShop.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Error"]
        </div>
    }

    <h3>Bạn có chắc muốn xóa sản phẩm này?</h3>
    <div class="card">
        <div class="card-body">
            <h4>@Model.Ten</h4>
            <dl class="row">
                <dt class="col-sm-2">Mã hàng</dt>
                <dd class="col-sm-10">@Model.Id</dd>
                <dt class="col-sm-2">Giá</dt>
                <dd class="col-sm-10">@Model.Gia.ToString("N0") VNĐ</dd>
                <dt class="col-sm-2">Loại</dt>
                <dd class="col-sm-10">@Model.Loai</dd>
                <dt class="col-sm-2">Số lượng tồn</dt>
                <dd class="col-sm-10">@Model.Soluongton</dd>
                <dt class="col-sm-2">Mô tả</dt>
                <dd class="col-sm-10">@Model.MoTa</dd>
                <dt class="col-sm-2">Ảnh</dt>
                <dd class="col-sm-10 text-center">                   
                    @if (Model.HinhAnh != null && Model.HinhAnh.Any())
                    {
                        foreach (var image in Model.HinhAnh)
                        {
                            <img src="~/images/@image" alt="@Model.Ten"
                                style="width: 100px; height: 100px; object-fit: cover; margin: 5px;" />
                        }
                    }
                    else
                    {
                        <img src="~/images/default.jpg" alt="Default"
                            style="width: 100px; height: 100px; object-fit: cover;" />
                    }
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="text-center">
                    <input type="submit" value="Xóa" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Có thể để trống nếu không cần script -->
}