@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - TechShop</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/slidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin/statistics.css" asp-append-version="true" />
</head>

<body>
    <header>
        <!-- Header Top -->
        <div class="header-top py-2 bg-dark text-light">
            <div class="container d-flex justify-content-between align-items-center">
                <div class="social-icons d-flex align-items-center">
                    <a href="https://www.facebook.com" target="_blank" aria-label="Facebook" class="text-light me-2">
                        <i class="bi bi-facebook"></i>
                    </a>
                    <a href="https://www.instagram.com" target="_blank" aria-label="Instagram" class="text-light me-2">
                        <i class="bi bi-instagram"></i>
                    </a>
                    <a href="https://www.tiktok.com" target="_blank" aria-label="TikTok" class="text-light">
                        <i class="bi bi-tiktok"></i>
                    </a>
                </div>
                <div class="account-info">
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <div class="d-flex align-items-center">
                            <span class="text-light me-2">Xin chào, @User.Identity.Name</span>
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline m-0">
                                <button type="submit" class="btn btn-link text-light p-0"><i class="fas fa-sign-out-alt me-2"></i>Đăng xuất</button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login"
                            class="text-decoration-none text-light d-flex align-items-center">
                            <i class="bi bi-person-circle me-1"></i> Đăng nhập
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Header Bottom -->
        <div class="header-bottom bg-light">
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <div class="container-fluid align-items-center d-flex flex-nowrap">
                        <a class="navbar-brand me-3 logo" href="#">
                            <img src="~/images/logo.png" alt="Logo TechShop" class="img-fluid" />
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Mở/Đóng điều hướng">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse flex-grow-1" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="AdminProduct" asp-action="Index">Danh mục sản
                                        phẩm</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="AdminOrder" asp-action="Index">Theo dõi đơn
                                        hàng</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="AdminStatistics" asp-action="Statistics">Thống
                                        kê</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="AdminAccount" asp-action="Index">Quản lý tài khoản</a>
                                </li>
                            </ul>
                            <div class="d-flex ms-auto">
                                <form class="search-bar" role="search" method="get" asp-controller="AdminProduct"
                                    asp-action="Index">
                                    <div class="input-group">
                                        <input type="search" name="searchTerm" class="form-control"
                                            placeholder="Tìm kiếm sản phẩm" aria-label="Tìm kiếm"
                                            aria-describedby="button-search" />
                                        <button class="btn btn-primary" type="submit" id="button-search"
                                            aria-label="Nút tìm kiếm">
                                            <i class="bi bi-search"></i>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="text-white">TechShop</h5>
                    <p class="text-white-50">Nơi mua sắm thiết bị công nghệ tin cậy của bạn. Laptop, tai nghe, loa và phụ kiện chính hãng.</p>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-tiktok"></i></a>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <h5 class="text-white">Hỗ trợ & Chính sách</h5>
                    <ul class="footer-links">
                        <li><a href="#">Câu hỏi thường gặp (FAQ)</a></li>
                        <li><a href="#">Chính sách vận chuyển</a></li>
                        <li><a href="#">Chính sách đổi trả</a></li>
                        <li><a href="#">Chính sách bảo mật</a></li>
                        <li><a href="#">Điều khoản dịch vụ</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="text-white mb-4">Thông tin liên hệ</h5>
                    <p class="text-white-50">
                        <i class="fas fa-map-marker-alt me-2"></i>43 Nguyễn Lương Bằng, Hòa Khánh Bắc, Liên Chiểu, Đà Nẵng
                    </p>
                    <p class="text-white-50">
                        <i class="fas fa-phone me-2"></i>0978 684 764
                    </p>
                    <p class="text-white-50">
                        <i class="fas fa-envelope me-2"></i>info@techshop.com
                    </p>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="container">
                <p class="text-center text-white-50 mb-0">&copy; @DateTime.Now.Year - TechShop. Tất cả quyền được bảo lưu.</p>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: true)
</body>

</html>