@model IEnumerable<TechShop.ViewModels.AccountViewModel>

@{
    ViewData["Title"] = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

<style>
    .account-table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .account-table th,
    .account-table td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;
    }

    .account-table th {
        background-color: #4a90e2;
        color: white;
        font-weight: bold;
    }

    .account-table tr {
        transition: background-color 0.3s;
    }

    .account-table tr:hover {
        background-color: #f5f5f5;
    }

    .btn {
        border-radius: 5px;
        padding: 6px 12px;
        text-decoration: none;
        color: white;
        transition: background-color 0.3s, transform 0.2s;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn-primary:hover,
    .btn-danger:hover {
        transform: scale(1.05);
    }

    .btn-sm {
        font-size: 14px;
    }

    .role-badge {
        padding: 6px 12px;
        border-radius: 15px;
        color: white;
        font-size: 14px;
    }

    .role-admin {
        background-color: #dc3545;
    }

    .role-user {
        background-color: #28a745;
    }
</style>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Quản lý tài khoản</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Tạo tài khoản mới
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="account-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên đăng nhập</th>
                            <th>Email</th>
                            <th>Họ tên</th>
                            <th>Số điện thoại</th>
                            <th>Địa chỉ</th>
                            <th>Vai trò</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var account in Model)
                        {
                            <tr>
                                <td>@account.MaTk</td>
                                <td>@account.UsernameTk</td>
                                <td>@account.Gmail</td>
                                <td>@account.FullName</td>
                                <td>@account.PhoneNumber</td>
                                <td>@account.Address</td>
                                <td>
                                    <span class="role-badge @(account.RoleTk == 1 ? "role-admin" : "role-user")">
                                        @(account.RoleTk == 1 ? "Admin" : "User")
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@account.MaTk" class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete(@account.MaTk)">
                                        <i class="fas fa-trash"></i> Xóa
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<form id="deleteForm" asp-action="Delete" method="post">
    <input type="hidden" id="deleteId" name="id" />
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        function confirmDelete(id) {
            if (confirm('Bạn có chắc chắn muốn xóa tài khoản này?')) {
                $('#deleteId').val(id);
                $('#deleteForm').submit();
            }
        }
    </script>
} 