@model List<TechShop.ViewModels.ProductViewModel>

@{
    ViewData["Title"] = ViewData["Title"] ?? "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-group .btn-primary {
        font-weight: bold;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, .25);
        transform: scale(1.05);
        position: relative;
        z-index: 1;
    }

    .btn-group .btn {
        transition: all 0.2s ease-in-out;
    }
</style>

<div class="container">
    <h2>@ViewData["Title"]</h2> <!-- Bộ lọc danh mục sản phẩm -->
    <div class="mb-3">
        <div class="btn-group" role="group" aria-label="Bộ lọc danh mục">
            <a class="btn @(string.IsNullOrEmpty(ViewData["CategoryName"]?.ToString()) ? "btn-primary" : "btn-outline-primary")"
                asp-controller="AdminProduct" asp-action="Index">Tất cả</a>
            <a class="btn @(ViewData["CategoryName"]?.ToString() == "Laptop" ? "btn-primary" : "btn-outline-primary")"
                asp-controller="AdminProduct" asp-action="Index" asp-route-category="Laptop">Laptop</a>
            <a class="btn @(ViewData["CategoryName"]?.ToString() == "Bàn phím" ? "btn-primary" : "btn-outline-primary")"
                asp-controller="AdminProduct" asp-action="Index" asp-route-category="Bàn phím">Bàn phím</a>
            <a class="btn @(ViewData["CategoryName"]?.ToString() == "Tai nghe" ? "btn-primary" : "btn-outline-primary")"
                asp-controller="AdminProduct" asp-action="Index" asp-route-category="Tai nghe">Tai nghe</a>
            <a class="btn @(ViewData["CategoryName"]?.ToString() == "Loa" ? "btn-primary" : "btn-outline-primary")"
                asp-controller="AdminProduct" asp-action="Index" asp-route-category="Loa">Loa</a>
            <a class="btn @(ViewData["CategoryName"]?.ToString() == "Màn hình" ? "btn-primary" : "btn-outline-primary")"
                asp-controller="AdminProduct" asp-action="Index" asp-route-category="Màn hình">Màn hình</a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["Success"]

        </div>

    }



    @if (TempData["Error"] != null)

    {

        <div class="alert alert-danger" role="alert">
            @TempData["Error"]
        </div>
    }

    <div class="mb-3">
        <div class="btn-group" role="group">
            <a href="@Url.Action("Index", new { showDeleted = false })"
                class="btn @(!ViewBag.ShowDeleted ? "btn-primary" : "btn-outline-primary")">
                Sản phẩm đang bán
            </a>
            <a href="@Url.Action("Index", new { showDeleted = true })"
                class="btn @(ViewBag.ShowDeleted ? "btn-primary" : "btn-outline-primary")">
                Sản phẩm đã xóa
            </a>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-success">Thêm sản phẩm mới</a>
        </div>

    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100">
                    @if (product.HinhAnh != null && product.HinhAnh.Any())
                    {
                        <img src="~/images/@product.HinhAnh.First()" class="card-img-top" alt="@product.Ten"
                            style="height: 200px; object-fit: contain;">
                    }
                    else
                    {
                        <img src="/images/default.jpg" class="card-img-top" alt="@product.Ten"
                            style="height: 200px; object-fit: contain;">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@product.Ten</h5>
                        <p class="card-text text-primary fw-bold">@product.FormattedPrice</p>
                        <p class="card-text">
                            <small class="text-muted">
                                Loại: @product.Loai<br>
                                Số lượng tồn: @product.Soluongton<br>

                                Ngày tạo: @(product.NgayTao?.ToString("dd/MM/yyyy HH:mm"))
                                @if (product.NgayXoa.HasValue)
                                {
                                    <br>

                                    <span class="text-danger">Đã xóa: @product.NgayXoa.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                }
                            </small>
                        </p>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info">Chi tiết</a>
                            @if (!product.NgayXoa.HasValue)
                            {
                                <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Sửa</a>
                                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Xóa</a>
                            }
                            else
                            {
                                <a asp-action="Restore" asp-route-id="@product.Id" class="btn btn-success">Khôi phục</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}

