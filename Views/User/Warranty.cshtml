@model IEnumerable<TechShop.Models.Hoadon>

@{
    ViewData["Title"] = "Bảo hành";
}

<div class="container my-4">
    <h2 class="section-title mb-4">Thông tin bảo hành</h2>
    @if (Model.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Mã đơn hàng</th>
                    <th>Ngày lập</th>
                    <th>Tên hàng hóa</th>
                    <th>Thời gian bảo hành</th>
                    <th>Chi tiết</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    foreach (var item in order.ChitietHds)
                    {
                        <tr>
                            <td>@order.MaHd</td>
                            <td>@order.NgaylapHd.ToString("dd/MM/yyyy")</td>
                            <td>@item.MaHhNavigation?.TenHh</td>
                            <td>12 tháng (từ @order.NgaylapHd.AddMonths(12).ToString("dd/MM/yyyy"))</td>
                            <td>
                                <a asp-controller="User" asp-action="OrderDetails" asp-route-id="@order.MaHd"
                                   class="btn btn-info btn-sm">Chi tiết</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">Bạn chưa có sản phẩm nào được bảo hành</div>
    }
</div>