@model TechShop.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Hồ sơ của tôi";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 profile-title">Hồ sơ của tôi</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-custom">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="card profile-card">
        <div class="card-body">
            <form asp-action="UpdateProfile" method="post" class="profile-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-4">
                    <label asp-for="FullName" class="control-label form-label">Họ và tên</label>
                    <input asp-for="FullName" class="form-control form-input" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Email" class="control-label form-label">Email</label>
                    <input asp-for="Email" class="form-control form-input" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="PhoneNumber" class="control-label form-label">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control form-input" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Address" class="control-label form-label">Địa chỉ</label>
                    <input asp-for="Address" class="form-control form-input" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary update-btn">Cập nhật thông tin</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .profile-title {
        color: #2c3e50;
        font-weight: 600;
        text-align: center;
        margin-bottom: 2rem;
        position: relative;
        padding-bottom: 10px;
    }

    .profile-title:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        height: 3px;
        background: linear-gradient(to right, #3498db, #2ecc71);
        border-radius: 2px;
    }

    .profile-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .profile-card:hover {
        transform: translateY(-5px);
    }

    .form-label {
        color: #34495e;
        font-weight: 500;
        margin-bottom: 8px;
    }

    .form-input {
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 12px;
        transition: all 0.3s ease;
    }

    .form-input:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
    }

    .update-btn {
        background: linear-gradient(to right, #3498db, #2ecc71);
        border: none;
        border-radius: 8px;
        padding: 12px 30px;
        font-weight: 500;
        transition: all 0.3s ease;
        width: 100%;
    }

    .update-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(52, 152, 219, 0.3);
    }

    .alert-custom {
        border-radius: 10px;
        border: none;
        background: linear-gradient(to right, #2ecc71, #27ae60);
        color: white;
        padding: 15px 20px;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px rgba(46, 204, 113, 0.2);
    }

    .text-danger {
        color: #e74c3c !important;
        font-size: 0.85rem;
        margin-top: 5px;
        display: block;
    }

    .form-group {
        position: relative;
    }

    .form-group:last-child {
        margin-top: 2rem;
    }

    @@media (max-width: 768px) {
        .container {
            padding: 0 20px;
        }
        
        .profile-card {
            margin: 0 -10px;
        }
    }
</style> 