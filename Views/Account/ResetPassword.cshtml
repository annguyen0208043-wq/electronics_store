@model TechShop.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/account.css" />
</head>
<body class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h4 class="auth-title"><i class="bi bi-shield-lock auth-icon"></i> Đặt lại mật khẩu</h4>
        </div>
        <div class="auth-body">
            <form asp-action="ResetPassword" method="post" class="auth-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <input type="hidden" asp-for="Username" />
                <input type="hidden" asp-for="Email" />

                <div class="form-group" style="grid-column: 1 / -1;">
                    <div class="alert alert-success" style="background-color: rgba(28, 200, 138, 0.1); border-color: rgba(28, 200, 138, 0.2); color: var(--success-color);">
                        <i class="bi bi-check-circle-fill"></i> Đang đặt lại mật khẩu cho tài khoản: <strong>@Model.Username</strong>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="NewPassword">Mật khẩu mới</label>
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="Nhập mật khẩu mới" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                    <small class="form-text text-muted">Nếu nhập mật khẩu mới, mật khẩu phải có ít nhất 8 ký tự, bao gồm chữ hoa, chữ thường và số</small>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword">Xác nhận mật khẩu</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu mới" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary auth-btn">
                    <i class="bi bi-check-circle-fill"></i> Cập nhật mật khẩu
                </button>

                <a asp-action="Login" class="auth-link">
                    <i class="bi bi-arrow-left-short"></i> Quay lại đăng nhập
                </a>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>