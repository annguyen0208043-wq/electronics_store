@model TechShop.ViewModels.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/account.css" />
</head>

<body class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h4 class="auth-title"><i class="bi bi-key-fill auth-icon"></i> Khôi phục mật khẩu</h4>
        </div>
        <div class="auth-body">
            <form asp-action="ForgotPassword" method="post" class="auth-form">
                <div class="form-group" style="grid-column: 1 / -1;">
                    <div class="alert alert-info"
                        style="background-color: rgba(78, 115, 223, 0.1); border-color: rgba(78, 115, 223, 0.2); color: var(--primary-color);">
                        <i class="bi bi-info-circle-fill"></i> Vui lòng nhập tài khoản và email đã đăng ký để nhận liên
                        kết đặt lại mật khẩu
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Username">Tài khoản</label>
                    <input asp-for="Username" class="form-control" placeholder="Nhập tài khoản của bạn" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email">Email đăng ký</label>
                    <input asp-for="Email" class="form-control" placeholder="Nhập email đã đăng ký" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary(true)
                    </div>
                }

                <button type="submit" class="btn btn-primary auth-btn">
                    <i class="bi bi-envelope-fill"></i> Gửi yêu cầu
                </button>

                <div class="d-flex justify-content-between" style="grid-column: 1 / -1;">
                    <a asp-action="Login" class="auth-link">
                        <i class="bi bi-arrow-left-short"></i> Quay lại đăng nhập
                    </a>
                    <a asp-action="Register" class="auth-link">
                        <i class="bi bi-person-plus"></i> Đăng ký tài khoản
                    </a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>

</html>