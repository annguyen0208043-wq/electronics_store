@model TechShop.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/account.css" />
</head>
<body class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h4 class="auth-title"><i class="bi bi-person-plus auth-icon"></i> Tạo tài khoản mới</h4>
        </div>
        <div class="auth-body">
            <form asp-action="Register" method="post" class="auth-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="UsernameTk">Tài khoản</label>
                    <input asp-for="UsernameTk" class="form-control" placeholder="Nhập tài khoản" />
                    <span asp-validation-for="UsernameTk" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PasswordTk">Mật khẩu</label>
                    <input asp-for="PasswordTk" class="form-control" type="password" placeholder="Nhập mật khẩu" />
                    <span asp-validation-for="PasswordTk" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Gmail">Email</label>
                    <input asp-for="Gmail" class="form-control" type="email" placeholder="Nhập email của bạn" />
                    <span asp-validation-for="Gmail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FullName">Họ và tên</label>
                    <input asp-for="FullName" class="form-control" placeholder="Nhập họ và tên" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber">Số điện thoại</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address">Địa chỉ</label>
                    <input asp-for="Address" class="form-control" placeholder="Nhập địa chỉ" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary auth-btn">
                    <i class="bi bi-person-plus-fill"></i> Đăng ký tài khoản
                </button>

                <a asp-action="Login" class="auth-link">
                    <i class="bi bi-arrow-left-short"></i> Đã có tài khoản? Đăng nhập ngay
                </a>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>