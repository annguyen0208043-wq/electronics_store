@model TechShop.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/account.css" />
</head>

<body class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h4 class="auth-title"><i class="bi bi-box-arrow-in-right auth-icon"></i> Đăng nhập hệ thống</h4>
        </div>
        <div class="auth-body">
            <form asp-action="Login" method="post" class="auth-form">
                <div class="form-group">
                    <label asp-for="Username">Tài khoản</label>
                    <input asp-for="Username" class="form-control" placeholder="Nhập tài khoản của bạn" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Mật khẩu</label>
                    <input asp-for="Password" class="form-control" placeholder="Nhập mật khẩu" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary(true)
                    </div>
                }

                <button type="submit" class="btn btn-primary auth-btn">Đăng nhập</button>

                <div class="d-flex justify-content-between" style="grid-column: 1 / -1;">
                    <a asp-action="Register" class="auth-link">Chưa có tài khoản? Đăng ký</a>
                    <a asp-action="ForgotPassword" class="auth-link">Quên mật khẩu?</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>

</html>